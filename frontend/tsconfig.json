{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
      "next-redux-wrapper": ["@types/next-redux-wrapper.d.ts"]
    },
    "skipLibCheck": false,
    "strict": true,
    "types": [
      // this is an unfortunate consequence of https://github.com/DefinitelyTyped/DefinitelyTyped/issues/33311 clusterfuck
      "accepts",
      "autosize",
      "babel__core",
      "babel__generator",
      "babel__template",
      "babel__traverse",
      "body-parser",
      "color-name",
      "connect",
      "cookie",
      "cookies",
      "cors",
      "eslint-visitor-keys",
      "express",
      "express-serve-static-core",
      "fs-capacitor",
      "graphql-upload",
      "hoist-non-react-statics",
      "http-assert",
      "http-proxy",
      "istanbul-lib-coverage",
      "istanbul-lib-report",
      "istanbul-reports",
      "jest",
      "jest-diff",
      "jquery",
      "json-schema",
      "keygrip",
      "koa",
      "koa-compose",
      "lodash",
      "long",
      "mime",
      "node",
      "node-fetch",
      "nprogress",
      "parse-json",
      "prop-types",
      "q",
      "range-parser",
      "react",
      "react-big-calendar",
      "react-datepicker",
      "react-dom",
      "react-helmet",
      "react-redux",
      "react-select",
      "react-toggle",
      "react-transition-group",
      "serve-static",
      "set-cookie-parser",
      "sizzle",
      "stack-utils",
      "styled-components",
      "unist",
      "ws",
      "yargs",
      "yargs-parser",
      "zen-observable"
    ]
  },
  "exclude": [
    "node_modules",
    ".next",
    "next.config.js",
    "next.raw-config.js",
    "dist",
    "src/server"
  ],
  "include": ["next-env.d.ts", "src/**/*.ts", "src/**/*.tsx", "server/**/*.ts"]
}
