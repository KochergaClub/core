{
  "include": [
    "jsx",
    "render"
  ],
  "compilerOptions": {
    "noImplicitAny": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": [
      "es2018",
      "dom"
    ],
    "baseUrl": ".",
    "paths": {
      "~/*": ["jsx/*"]
    },
    "typeRoots" : ["./node_modules/@types", "./jsx/@types"],
    "jsx": "react",
    "outDir": "./static/dist",
    "allowJs": true,
    "sourceMap": true
  }
}
